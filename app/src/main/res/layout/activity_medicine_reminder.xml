<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    tools:context=".MedicineReminder">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        app:srcCompat="@drawable/baseline_notifications_24" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Time to take your meds!"
        android:textSize="25sp"
        android:textStyle="bold"></TextView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <ImageView
        android:id="@+id/iv_med_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        tools:srcCompat="@drawable/baseline_block_flipped_24" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/tv_med_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Medicine Name"
        android:textSize="25sp"
        android:textStyle="bold"></TextView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:id="@+id/tv_med_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="12:00 PM"
        android:textSize="35sp"
        android:textStyle="bold"></TextView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"></Space>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <Button
            android:id="@+id/btn_taken"
            android:layout_width="150dp"
            android:layout_height="65dp"
            android:backgroundTint="#8BC34A"
            android:text="Taken"
            android:textSize="24sp"
            android:textStyle="bold"></Button>

        <Space
            android:layout_width="20dp"
            android:layout_height="20dp"></Space>

        <Button
            android:id="@+id/btn_skipped"
            android:layout_width="150dp"
            android:layout_height="65dp"
            android:backgroundTint="#EF6262"
            android:text="Skipped"
            android:textSize="24sp"
            android:textStyle="bold"></Button>

    </LinearLayout>

</LinearLayout>