<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainMenuElderly"
    android:gravity="center">

    <TextView
        android:id="@+id/tv_mainmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAIN MENU"
        android:textSize="54sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center">

        <Button
            android:id="@+id/btn_emergencysos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#9F0F0F"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="EMERGENCY SOS"
            android:textSize="24sp"
            android:layout_margin="20dp"/>

        <Button
            android:id="@+id/btn_viewmedhistory_elderly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="View Medication History"
            android:textSize="24sp"
            android:layout_margin="20dp"/>


        <Button
            android:id="@+id/btn_viewmedschedule_elderly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="View Medication Schedule"
            android:textSize="24sp"
            android:layout_margin="20dp"/>

        <Button
            android:id="@+id/btn_manageprofile_mainmenuelderly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="Manage Profile"
            android:textSize="24sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_logout_elderly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:textSize="24sp" />

</LinearLayout>